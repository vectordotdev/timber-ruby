#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path(File.join(File.dirname(__FILE__), "..", "lib"))
require "timber/cli"

begin
  Timber::CLI.run
rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts ""
  STDERR.puts Timber::CLI::Messages.separator
  STDERR.puts "Backtrace:"
  STDERR.puts ""
  STDERR.puts e.backtrace.join("\n")
  exit 1
end